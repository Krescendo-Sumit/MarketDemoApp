<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mahyco.market.demo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MahycoMarketDemo"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.sowingaction.AddNewSowingDetails"></activity>
        <activity android:name=".view.actionlist.PendingActionList" />
        <activity android:name=".view.pendingaction.PendingActionActivity" />
        <activity
            android:name=".view.login.Login"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MahycoMarketDemo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MahycoMarketDemo.NoActionBar" />
    </application>

</manifest>